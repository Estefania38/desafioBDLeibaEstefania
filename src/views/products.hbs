
<p><strong>{{error}}</strong></p>

{{#if payload}}
     <h1>Listas de productos</h1>
    <article id="list-products">
     <article class="container">
     <ul>
     {{#each payload}}
     <div class="card">
        <div class="imgBx">
          <img src="{{this.thumbnail}}" width="90px" />
        </div>
        <div class="contentBx">
          <h2>{{this.title}}</h2>
          <div class="size">
            <h3>{{this.description}}</h3>
            <h3>Precio: {{this.price}}</h3>
            <h4>Categoria: {{this.category}}</h4>
            <span>Codigo: {{this.code}}</span>
            <span>Stock: {{this.stock}}</span>
          </div>
          <div class="color">
            <h3>Color :</h3>
            <span></span>
            <span></span>            
          </div>
        </div>
      </div>   
      <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>   
     {{/each}}
     </ul>  
    </article>
  </article>  
     {{#if hasPrevPage}}
     <a href={{prevLink}}>Anterior</a>
     {{/if}}
     {{page}}
     {{#if hasNextPage}}
     <a href={{nextLink}}>Siguienter</a>
     {{/if}}
{{else}}
     <h2>No hay productos</h2>
{{/if}}

